# GreenTrace - Root Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# SMART CONTRACTS CONFIGURATION
# ===========================================

# Avalanche Fuji Testnet RPC URL
AVALANCHE_FUJI_URL=https://api.avax-test.network/ext/bc/C/rpc

# Your wallet private key (starts with 0x)
# Get this from MetaMask: Account Details > Export Private Key
# IMPORTANT: Never commit your actual private key to version control
PRIVATE_KEY=your_private_key_here

# Optional: Sepolia Testnet (if you want to deploy there too)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_project_id
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key_here

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Backend API URL for frontend
REACT_APP_API_URL=https://greentrace-backend-eh4d.onrender.com

# Optional: Different API URL for development
# REACT_APP_API_URL=http://localhost:8000

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Django secret key (generate a new one for production)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*.onrender.com

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Database URL (for production with PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/greentrace

# Redis URL (for caching and Celery)
# REDIS_URL=redis://localhost:6379

# Static files configuration
STATIC_URL=/static/
MEDIA_URL=/media/

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Render deployment
# These are automatically set by Render, but you can override:
# SECRET_KEY=auto-generated-by-render
# DEBUG=False
# ALLOWED_HOSTS=*.onrender.com,localhost,127.0.0.1
# CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app

# Vercel deployment
# These are set in Vercel dashboard:
# REACT_APP_API_URL=https://greentrace-backend-eh4d.onrender.com

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Contract addresses (update after deployment)
PRODUCT_REGISTRY_ADDRESS=0x78D866f9704FF874A3484C79aC9405947648588c
CARBON_CREDIT_ADDRESS=0x3b7Cbb8C26d2101dBC3808Cc597BCA879001160d

# Network configuration
CHAIN_ID=43113
NETWORK_NAME=Avalanche Fuji C-Chain
RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
BLOCK_EXPLORER_URL=https://testnet.snowtrace.io/

# ===========================================
# SECURITY NOTES
# ===========================================

# 1. Never commit .env files to version control
# 2. Use strong, unique secret keys in production
# 3. Keep your private keys secure and never share them
# 4. Use different keys for development and production
# 5. Regularly rotate your secret keys

# ===========================================
# DEVELOPMENT SETUP
# ===========================================

# 1. Copy this file to .env: cp env.example.root .env
# 2. Fill in your actual values
# 3. For smart contracts, get testnet AVAX from faucet
# 4. For backend, generate a new SECRET_KEY
# 5. For frontend, set the correct API URL
