# GreenTrace Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# DJANGO CONFIGURATION
# ===========================================

# Django secret key (generate a new one for production)
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated list)
# For development: localhost,127.0.0.1
# For production: your-domain.com,*.onrender.com
ALLOWED_HOSTS=localhost,127.0.0.1,*.onrender.com

# ===========================================
# CORS CONFIGURATION
# ===========================================

# CORS allowed origins (comma-separated list)
# Add your frontend URLs here
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Allow all origins (for development only)
# CORS_ALLOW_ALL_ORIGINS=True

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# SQLite (default for development)
# No additional configuration needed

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/greentrace

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/greentrace

# ===========================================
# STATIC FILES CONFIGURATION
# ===========================================

# Static files URL
STATIC_URL=/static/

# Media files URL
MEDIA_URL=/media/

# ===========================================
# CACHING CONFIGURATION
# ===========================================

# Redis URL (for caching and Celery)
# REDIS_URL=redis://localhost:6379

# Memcached (alternative)
# CACHE_URL=memcached://127.0.0.1:11211

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/greentrace.log

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Session configuration
# SESSION_COOKIE_AGE=1209600  # 2 weeks
# SESSION_COOKIE_SECURE=True  # HTTPS only
# SESSION_COOKIE_HTTPONLY=True

# CSRF configuration
# CSRF_COOKIE_SECURE=True  # HTTPS only
# CSRF_COOKIE_HTTPONLY=True

# ===========================================
# RENDER DEPLOYMENT
# ===========================================

# These variables are automatically set by Render:
# SECRET_KEY=auto-generated-by-render
# DEBUG=False
# ALLOWED_HOSTS=*.onrender.com,localhost,127.0.0.1
# CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app
# STATIC_URL=/static/
# MEDIA_URL=/media/

# ===========================================
# DEVELOPMENT SETUP
# ===========================================

# 1. Copy this file: cp env.example .env
# 2. Generate a new SECRET_KEY
# 3. Set DEBUG=True for development
# 4. Add your frontend URL to CORS_ALLOWED_ORIGINS
# 5. Run: python manage.py migrate
# 6. Run: python manage.py runserver

# ===========================================
# PRODUCTION SETUP
# ===========================================

# 1. Set DEBUG=False
# 2. Use a strong SECRET_KEY
# 3. Configure proper ALLOWED_HOSTS
# 4. Set up PostgreSQL database
# 5. Configure Redis for caching
# 6. Set up proper logging
# 7. Configure HTTPS and security headers
