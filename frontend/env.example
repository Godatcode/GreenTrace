# GreenTrace Frontend - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API URL
# For production: https://greentrace-backend-eh4d.onrender.com
# For development: http://localhost:8000
REACT_APP_API_URL=https://greentrace-backend-eh4d.onrender.com

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Contract addresses (update after deployment)
REACT_APP_PRODUCT_REGISTRY_ADDRESS=0x78D866f9704FF874A3484C79aC9405947648588c
REACT_APP_CARBON_CREDIT_ADDRESS=0x3b7Cbb8C26d2101dBC3808Cc597BCA879001160d

# Network configuration
REACT_APP_CHAIN_ID=43113
REACT_APP_NETWORK_NAME=Avalanche Fuji C-Chain
REACT_APP_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
REACT_APP_BLOCK_EXPLORER_URL=https://testnet.snowtrace.io/

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application name
REACT_APP_NAME=GreenTrace

# Application version
REACT_APP_VERSION=1.0.0

# Environment (development, staging, production)
REACT_APP_ENV=production

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_MOCK_DATA=false

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Analytics (Google Analytics, etc.)
# REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Error tracking (Sentry, etc.)
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development API URL
# REACT_APP_API_URL=http://localhost:8000

# Development contract addresses (if using local network)
# REACT_APP_PRODUCT_REGISTRY_ADDRESS=0x1234567890123456789012345678901234567890
# REACT_APP_CARBON_CREDIT_ADDRESS=0x1234567890123456789012345678901234567890

# ===========================================
# VERCEL DEPLOYMENT
# ===========================================

# These variables are set in Vercel dashboard:
# REACT_APP_API_URL=https://greentrace-backend-eh4d.onrender.com
# REACT_APP_PRODUCT_REGISTRY_ADDRESS=0x78D866f9704FF874A3484C79aC9405947648588c
# REACT_APP_CARBON_CREDIT_ADDRESS=0x3b7Cbb8C26d2101dBC3808Cc597BCA879001160d

# ===========================================
# SECURITY NOTES
# ===========================================

# 1. All React environment variables must start with REACT_APP_
# 2. Never commit .env files to version control
# 3. Use different values for development and production
# 4. Keep sensitive data in backend environment variables
# 5. Contract addresses are public and safe to expose

# ===========================================
# DEVELOPMENT SETUP
# ===========================================

# 1. Copy this file: cp env.example .env
# 2. Set REACT_APP_API_URL to your backend URL
# 3. Update contract addresses after deployment
# 4. Run: npm start

# ===========================================
# PRODUCTION SETUP
# ===========================================

# 1. Set REACT_APP_API_URL to production backend
# 2. Use production contract addresses
# 3. Set REACT_APP_ENV=production
# 4. Configure analytics and monitoring
# 5. Deploy to Vercel with environment variables
